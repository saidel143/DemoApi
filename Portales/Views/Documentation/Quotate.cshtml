@{
    ViewBag.Title = "Quotate";
}
<div id="wizard" class="uif-wizard">
    <div class="uif-step" data-title="Datos Generales">
        <div class="uif-row">
            <div class="uif-col-6">
                <label>Sucursal</label>
                <select>
                    <option>CASA MATRIZ</option>
                </select>
            </div>
            <div class="uif-col-6">
                <label>Ramo</label>
                <select>
                    <option>VEHICULO INDIVIDUAL</option>
                </select>
            </div>
        </div>
    </div>
    <div class="uif-step" data-title="Riesgos">

        <table class="uif-table" data-source="null" data-title="Riesgos" id="tablaRiesgos" data-add="true" data-edit="true" data-delete="true" data-selectiontype="single" data-filter="false" data-paginate="false">
            <thead>
                <tr>
                    <th data-property="Id">Id</th>
                    <th data-property="Detalle">Detalle</th>
                    <th data-property="Prima">Prima</th>
                    <th data-property="Suma">Suma Asegurada</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
        <table class="uif-table" data-source="null" data-title="Coberturas" id="tablaCoberturas" data-add="true" data-edit="true" data-delete="true" data-selectiontype="single" data-filter="false" data-paginate="false">
            <thead>
                <tr>
                    <th data-property="Id">Id</th>
                    <th data-property="Detalle">Detalle</th>
                    <th data-property="Valor">Valor Asegurable</th>
                    <th data-property="Suma">Suma Asegurada</th>
                    <th data-property="Prima">Prima</th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
        <button id="botonAgregarProducto" class="btn btn-default add-button" onclick="return false"><span class="glyphicon glyphicon-plus"></span> Producto</button>


    </div>
    <div class="uif-step" data-title="Comisiones">

    </div>
    <div class="uif-step" data-title="Resumen">

    </div>
</div>

