@section Scripts
{
    <script>
        var stepFunction = function (event, currentIndex, newIndex) {
            return true;
        };

        var finishFunction = function (event, currentIndex) {
            $("#alert").UifAlert('show', 'Los datos han sido guardado correctamente', 'info');
            return true;
        }

        $("#wizard").UifWizard({ onStep: stepFunction, onFinish: finishFunction });

        $('#tablaRiesgos').on('rowAdd', function (event, data) {
            $('#modalRiesgo').UifModal('showLocal', 'Agregar Riesgo');
        });

        $('#tablaCoberturas').on('rowAdd', function (event, data) {
            $('#modalCobertura').UifModal('showLocal', 'Agregar Cobertura');
        });

        $('#tablaDescuentos').on('rowAdd', function (event, data) {
            $('#inlineDescuentos').UifInline('show');
        });

        $('#tablaDeducibles').on('rowAdd', function (event, data) {
            $('#inlineDeducibles').UifInline('show');
        });

        $('#botonAgregarProducto').click(function () {
            $('#modalproducto').UifModal('showLocal', 'Agregar Producto');
        });

    </script>
}
