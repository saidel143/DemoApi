        $('#tree1').treeview({ data: getTree1() });

        $('#tree1').on('nodeSelected', function (event, node) {
            if (node.nodes == null && node._nodes == null) {
                $('#modalDetalleCuenta').UifModal('showLocal', 'Detalle de Cuenta');
            }
        });

