@{
    ViewBag.Title = "EnabledDisabledTab";
}
@section Breadcrumb
{
    <ol class="breadcrumb global-header-breadcrumb">
        <li><a href="/Home">Documentación</a></li>

        <li class="active">Enable/ Disabled Tab</li>
    </ol>
}
@section Toolbar
{
    <div class="app-header">
        <div class="pull-right">
            <button class="btn btn-primary" id="btnTab1">Deshabilitar Tab 3</button>
            <button class="btn btn-primary" id="btnTab2">Habilitar Tab 3</button>
            <button class="btn btn-primary" id="btnTabEAll">Desabilitar Todo</button>
            <button class="btn btn-primary" id="btnTabDAll">Habilitar Todo</button>
        </div>
    </div>
}
<div class="uif-panel" data-title="Enabled/Disabled Tab">
    <div class="uif-row">
        <div class="uif-col-12">

            <ul class="uif-tab" id="tabs">
                <li class="active"><a href="#tabSingle" id="tab1" data-disabled="true">Tab 1</a></li>
                <li><a href="#tabMultiple" id="tab2">Tab 2</a></li>
                <li class="disabled"><a href="#tabNone" data-disabled="true" id="tab3">Tab 3</a></li>
            </ul>

            <div class="uif-tab-content">
                <div class="active" id="tabSingle">
                    Contenido Tab 1
                </div>
                <div id="tabMultiple">
                    Contenido Tab 2
                </div>
                <div id="tabNone">
                    <div class="uif-row">
                        <div class="uif-col-6">

                            <label>Input</label>
                            <input type="text" placeholder="Campo">

                        </div>
                        <div class="uif-col-6">
                            <label>TextArea</label>
                            <textarea rows="10"></textarea>
                        </div>
                    </div>
                    <div class="uif-row">
                        <div class="uif-col-12">
                            <label>AutoComplete</label>
                            <input class="uif-autocomplete" type="text" data-source="@Url.Action("AutoCompleteSource", "Documentation")" data-displaykey="Empresa" placeholder="Tipea las palabra Mir para probarlo." id="inputtest">
                        </div>
                    </div>
                    <div class="uif-row">
                        <div class="uif-col-12">
                            <label>Select</label>
                            <select class="uif-select form-control" id="select1" data-source="/Documentation/SelectSource" data-id="Id" data-name="Empresa"></select>
                        </div>
                    </div>
                    <div class="uif-row">
                        <div class="uif-col-12">
                            <label>InputSearch</label>
                            <input type="text" class="uif-input-search" placeholder="Ingrese el criterio de busqueda aquí." id="inputSearch" />
                        </div>
                    </div>
                    <div class="uif-row">
                        <div class="uif-col-12">
                            <table class="uif-table" data-source="/Documentation/GetRecords" id="tableMultiple" data-edit="true" data-delete="true" data-selectiontype="single" data-filter="true" data-paginate="true">
                                <thead>
                                    <tr>
                                        <th data-property="Id">Id</th>
                                        <th data-property="Empresa">Empresa</th>
                                        <th data-property="Ciudad">Ciudad</th>
                                        <th data-property="Pais">País</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                    </div>
                    <div class="uif-row">
                        <div class="uif-col-12">
                            <label>DatePicker</label>
                            <input type="text" class="uif-datepicker" data-mask="99/99/9999" id="datepicker" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#btnTab1").click(function () {
                $('#tabs').UifTabHeader("disabled", "#tab3", true);
            });

            $("#btnTab2").click(function () {
                $('#tabs').UifTabHeader("disabled", "#tab3", false);
            });

            $("#btnTabEAll").click(function () {
                $('#tabs').UifTabHeader("disabled", null, true);
            });

            $("#btnTabDAll").click(function () {
                $('#tabs').UifTabHeader("disabled", null, false);
            });

        });
    </script>
}
